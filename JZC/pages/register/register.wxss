/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}



/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 背景图片 */
.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}
/* SCU Makers */
.SCU{
  position: absolute;
  margin-left: -200rpx;
  margin-top: -1150rpx;
  width: 202rpx;
  height: 48rpx;
  opacity: 1;
  font-size: 70rpx;
  font-weight: 800;
  letter-spacing: 0px;
  line-height: 47.74rpx;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  vertical-align: top;
  white-space: nowrap;  
}
/* 对话框 */
.dial {
  position: absolute;
  margin-top: 100rpx;
  width: 600rpx;
  height: 1150rpx;
  opacity: 1;
  z-index: -998;
}

/* 注册按钮 */
.button {
  background-color: #00ADB5;
  color: white;
  border-radius: 30rpx;
  width: 70vw; /* 使用视口宽度单位 */
  height: 6vh; /* 使用视口高度单位 */
  opacity: 1;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed; /* 固定定位 */
  bottom: 22vh; /* 距离底部 10% 视口高度 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 水平居中 */
  z-index: 998;
}

/* SVG 图标 */
.svg {
  background-image: url(data:image/svg+xml;base64,);
  width: 8vw; /* 使用视口宽度单位 */
  height: 8vw; /* 使用视口宽度单位 */
  background-size: contain;
  position: absolute; /* 绝对定位 */
  right: 33vw; /* 距离按钮右侧 5% 视口宽度 */
  top: 73.2%; 
  z-index: 999;
}
/* 验证码图片 */
.code {
  background-color: #00ADB5;
  color: white; /* 文字颜色根据实际需求调整 */
  border: none;
  display: flex;
  position: fixed;
  top: 43.5%;
  right: 15%;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border-top-right-radius: 20rpx; /* 右边上圆角半径 */
  border-bottom-right-radius: 20rpx; /* 右边下圆角半径 */
  text-align: center;
  font-size:30rpx;
  width: 26vw; /* 根据实际需求调整宽度 */
  height: 5.3vh; /* 根据实际需求调整高度 */
  line-height: 85rpx; /* 使文字垂直居中，高度与按钮高度一致 */
  white-space: nowrap;
  opacity: 1;
  z-index: 999;
}

/* 注册标题 */
.register-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(34, 40, 49, 1);
  text-align: center;
  position: absolute;
  margin-top: -750rpx;
  z-index: 1;
}

/* 注册表单内容 */
.register-content {
  position: absolute;
  margin-top: 0rpx;
  width: 500rpx;
  padding: 20rpx;
  box-sizing: border-box;
  z-index: 1;
}

/* 表单项 */
.form-item {
  margin-bottom: 20rpx;
  width: 100%;
  color: #00ADB5;
}

.form-item label {
  display: block;
  margin-bottom: 20rpx;
  color: #00ADB5;
  font-size: 30rpx;
  font-weight: 700;
}

.form-item input {
  margin-left: -25rpx;
  width: 500rpx;
  height: 70rpx;
  padding: 8rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  font-size: 30rpx;
}

/* 密码显示/隐藏图标 */
.password-toggle-icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  cursor: pointer;
  margin-left: 400rpx;
  margin-top: -65rpx;
  z-index: 999;
}

/* 返回登录链接 */
.login-link {
    text-align: center;
    color: #00ADB5;
    font-size: 40rpx;
    margin-bottom: 50rpx;
    cursor: pointer;
    position: absolute;
    margin-top: 160rpx; 
    margin-left: 125rpx; 
}
/* 输入框默认样式 */
.preinput {
  border: 1px solid #ccc;
  flex: 1;
  padding: 10rpx;
  font-weight: 500;
  font-size: 30rpx;
  left: 200rpx;
  border-radius: 4px;
  outline: none;
  text-indent: 30rpx;
}

/* 输入框选中时的样式 */
.preinput.focused {
  border-color: #00ADB5;
  box-shadow: 0 0 5px rgba(0, 173, 181, 0.5);
}